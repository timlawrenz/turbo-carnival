<div class="min-h-screen bg-gray-900 p-8">
  <div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-4xl font-bold text-white">ğŸ† Winners by Run</h1>
      <%= render ::Base::ButtonComponent.new(variant: :primary, href: runs_path) do %>
        â† Back to runs
      <% end %>
    </div>

    <% if @runs.any? %>
      <div class="space-y-8">
        <% @runs.each do |run| %>
          <% 
            pipeline = run.pipeline
            final_step = pipeline.pipeline_steps.order(:order).last
            top_3 = ImageCandidate.where(
              pipeline_step: final_step,
              pipeline_run: run,
              status: 'active'
            ).order(elo_score: :desc).limit(3)
            display_name = run.name || "Run ##{run.id}"
          %>
          
          <div class="bg-gray-800 rounded-lg p-6">
            <div class="flex justify-between items-center mb-4">
              <h2 class="text-2xl font-bold text-white"><%= display_name %></h2>
              <%= link_to "View all â†’", winners_run_path(run), class: "text-yellow-400 hover:text-yellow-300" %>
            </div>
            
            <% if top_3.any? %>
              <div class="grid md:grid-cols-3 gap-4">
                <% top_3.each_with_index do |winner, index| %>
                  <div class="bg-gray-700 rounded-lg overflow-hidden">
                    <div class="relative">
                      <div class="absolute top-2 right-2 bg-yellow-500 text-gray-900 px-2 py-1 rounded-full font-bold text-xs">
                        <% if index == 0 %>ğŸ¥‡<% elsif index == 1 %>ğŸ¥ˆ<% else %>ğŸ¥‰<% end %> #<%= index + 1 %>
                      </div>
                      <div class="aspect-square bg-gray-600 flex items-center justify-center">
                        <% if winner.image_path.present? %>
                          <%= image_tag candidate_image_path(winner), class: "w-full h-full object-contain" %>
                        <% else %>
                          <span class="text-gray-400">No image</span>
                        <% end %>
                      </div>
                    </div>
                    <div class="p-3">
                      <div class="text-yellow-400 font-bold text-lg">â­ <%= winner.elo_score %></div>
                      <div class="text-xs text-gray-400">ID: <%= winner.id %></div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-gray-400">No candidates yet</p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center text-gray-400 py-12">
        <p class="text-xl">No runs found</p>
      </div>
    <% end %>
  </div>
</div>
