<div class="bg-zinc-900 min-h-screen">
  <%= turbo_stream_from "runs" %>
  <div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-white">
        ğŸ“‹ Pipeline Runs
      </h1>
      <div class="flex gap-4">
        <%= render ::Base::ButtonComponent.new(variant: :primary, href: new_run_path) do %>
          â• New Run
        <% end %>
        <%= render ::Base::ButtonComponent.new(variant: :secondary, href: winners_path) do %>
          ğŸ† Winners
        <% end %>
      </div>
    </div>

    <% if notice %>
      <div class="bg-green-600 text-white px-6 py-4 rounded-lg mb-6">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="bg-red-600 text-white px-6 py-4 rounded-lg mb-6">
        <%= alert %>
      </div>
    <% end %>

    <!-- Active Runs -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-white mb-4">
        Active Runs (<%= @active_runs.total_count %>)
      </h2>
      
      <% if @active_runs.any? %>
        <div class="grid grid-cols-1 gap-6 mb-6">
          <% @active_runs.each do |run| %>
            <%= render partial: 'run_card', locals: { run: run } %>
          <% end %>
        </div>
        
        <%= paginate @active_runs, param_name: :active_page %>
      <% else %>
        <div class="text-center text-zinc-400 py-8 bg-zinc-800 rounded-lg">
          <p class="text-lg">No active runs</p>
        </div>
      <% end %>
    </section>

    <!-- Completed Runs -->
    <section>
      <h2 class="text-2xl font-semibold text-white mb-4">
        Completed Runs (<%= @completed_runs.total_count %>)
      </h2>
      
      <% if @completed_runs.any? %>
        <div class="space-y-3 mb-6">
          <% @completed_runs.each do |run| %>
            <%= render partial: 'run_card_compact', locals: { run: run } %>
          <% end %>
        </div>
        
        <%= paginate @completed_runs, param_name: :completed_page %>
      <% else %>
        <div class="text-center text-zinc-400 py-8 bg-zinc-800 rounded-lg">
          <p class="text-lg">No completed runs</p>
        </div>
      <% end %>
    </section>
  </div>
</div>
