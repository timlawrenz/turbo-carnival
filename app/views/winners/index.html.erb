<div class="min-h-screen bg-gray-900 p-8">
  <div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-4xl font-bold text-white">ğŸ† Winners Gallery</h1>
      <%= link_to "â† Back to Voting", vote_path, class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors" %>
    </div>

    <% if @winners.any? %>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @winners.each do |winner| %>
          <div class="bg-gray-800 rounded-lg overflow-hidden shadow-xl">
            <div class="relative">
              <div class="absolute top-2 right-2 bg-yellow-500 text-gray-900 px-3 py-1 rounded-full font-bold text-sm">
                ğŸ† WINNER
              </div>
              <div class="aspect-square bg-gray-700 flex items-center justify-center">
                <% if winner.image_path.present? %>
                  <%= image_tag candidate_image_path(winner), class: "w-full h-full object-contain", alt: "Winner #{winner.id}" %>
                <% else %>
                  <span class="text-gray-500">No image</span>
                <% end %>
              </div>
            </div>
            
            <div class="p-4">
              <h3 class="text-white font-semibold text-lg mb-2">
                <%= winner.pipeline_step.name %>
              </h3>
              <div class="text-gray-400 text-sm space-y-1">
                <p>ID: <%= winner.id %></p>
                <p>ELO: <%= winner.elo_score %></p>
                <p>Votes: <%= winner.vote_count %></p>
                <p>Declared: <%= winner.winner_at.strftime("%Y-%m-%d %H:%M") %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-20">
        <p class="text-gray-400 text-xl">No winners declared yet.</p>
        <p class="text-gray-500 mt-2">Start voting and declare your first winner!</p>
        <%= link_to "Start Voting â†’", vote_path, class: "inline-block mt-4 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors" %>
      </div>
    <% end %>
  </div>
</div>
