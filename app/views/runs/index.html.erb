<div class="bg-zinc-900 min-h-screen">
  <%= turbo_stream_from "runs" %>
  <div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-white">
        ğŸ“‹ Pipeline Runs
      </h1>
      <div class="flex gap-4">
        <%= render ::Base::ButtonComponent.new(variant: :primary, href: new_run_path) do %>
          â• New Run
        <% end %>
        <%= render ::Base::ButtonComponent.new(variant: :secondary, href: winners_path) do %>
          ğŸ† Winners
        <% end %>
      </div>
    </div>

    <% if notice %>
      <div class="bg-green-600 text-white px-6 py-4 rounded-lg mb-6">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="bg-red-600 text-white px-6 py-4 rounded-lg mb-6">
        <%= alert %>
      </div>
    <% end %>

    <!-- Runs List -->
    <% if @runs.any? %>
      <div class="grid grid-cols-1 gap-6">
        <% @runs.each do |run| %>
          <%= render partial: 'run_card', locals: { run: run } %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center text-zinc-400 py-12">
        <p class="text-xl mb-4">No pipeline runs found</p>
        <p class="text-sm">Create a new run to get started</p>
      </div>
    <% end %>
  </div>
</div>
