<div class="p-8 space-y-6 bg-gray-100 dark:bg-gray-800">
  <div class="space-y-2">
    <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300">Small</h3>
    <div class="flex gap-2 items-center">
      <%= render ::Base::BadgeComponent.new(variant: :primary, size: :sm) do %>
        Small Badge
      <% end %>
      <%= render ::Base::BadgeComponent.new(variant: :success, size: :sm) do %>
        3
      <% end %>
    </div>
  </div>

  <div class="space-y-2">
    <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300">Medium (Default)</h3>
    <div class="flex gap-2 items-center">
      <%= render ::Base::BadgeComponent.new(variant: :primary, size: :md) do %>
        Medium Badge
      <% end %>
      <%= render ::Base::BadgeComponent.new(variant: :success, size: :md) do %>
        12
      <% end %>
    </div>
  </div>

  <div class="space-y-2">
    <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300">Large</h3>
    <div class="flex gap-2 items-center">
      <%= render ::Base::BadgeComponent.new(variant: :primary, size: :lg) do %>
        Large Badge
      <% end %>
      <%= render ::Base::BadgeComponent.new(variant: :success, size: :lg) do %>
        42
      <% end %>
    </div>
  </div>
</div>
