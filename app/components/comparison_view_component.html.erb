<div class="h-full flex flex-col" data-controller="voting">
  <div class="text-center text-white mb-4 flex-shrink-0">
    <h1 class="text-2xl font-bold mb-2">Vote for the Better Image</h1>
    <p class="text-gray-400 text-sm">
      ← / → arrows to vote • K to kill • N to skip
    </p>
  </div>

  <div class="flex-1 grid md:grid-cols-2 gap-4 min-h-0">
    <%= render VotingCardComponent.new(candidate: candidate_a, opponent: candidate_b, run: run, position: :left) %>
    <%= render VotingCardComponent.new(candidate: candidate_b, opponent: candidate_a, run: run, position: :right) %>
  </div>

  <div class="flex justify-center gap-4 mt-4 flex-shrink-0">
    <%= button_to run_reject_vote_path(run, candidate_a), 
        method: :post, 
        data: { voting_target: "leftKill" },
        class: "px-6 py-2 bg-red-600 text-white hover:bg-red-700 rounded-lg font-semibold transition-colors inline-flex items-center justify-center gap-2" do %>
      Kill Left Image
    <% end %>
    <%= button_to run_reject_vote_path(run, candidate_b), 
        method: :post, 
        data: { voting_target: "rightKill" },
        class: "px-6 py-2 bg-red-600 text-white hover:bg-red-700 rounded-lg font-semibold transition-colors inline-flex items-center justify-center gap-2" do %>
      Kill Right Image
    <% end %>
  </div>
</div>
