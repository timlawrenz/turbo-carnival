<div class="space-y-8 p-6 bg-gray-900">
  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Default</h3>
    <%= render Base::SelectComponent.new(
      name: "example1",
      label: "Country",
      prompt: "Select a country...",
      options: [["United States", "us"], ["Canada", "ca"], ["Mexico", "mx"], ["United Kingdom", "uk"]]
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">With Selected Value</h3>
    <%= render Base::SelectComponent.new(
      name: "example2",
      label: "Timezone",
      options: [
        ["Pacific Time (PT)", "pt"],
        ["Mountain Time (MT)", "mt"],
        ["Central Time (CT)", "ct"],
        ["Eastern Time (ET)", "et"]
      ],
      selected: "ct"
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Required</h3>
    <%= render Base::SelectComponent.new(
      name: "example3",
      label: "Pipeline",
      prompt: "Choose a pipeline...",
      options: [["Image Generation", "1"], ["Text Processing", "2"], ["Video Creation", "3"]],
      required: true
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">With Error</h3>
    <%= render Base::SelectComponent.new(
      name: "example4",
      label: "Content Pillar",
      prompt: "Select a pillar...",
      options: [["Fitness", "1"], ["Nutrition", "2"], ["Mental Health", "3"]],
      error: "Pillar can't be blank"
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">With Hint</h3>
    <%= render Base::SelectComponent.new(
      name: "example5",
      label: "Post Status",
      options: [["Draft", "draft"], ["Scheduled", "scheduled"], ["Published", "published"]],
      hint: "Published posts are immediately visible to your audience"
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Disabled</h3>
    <%= render Base::SelectComponent.new(
      name: "example6",
      label: "Subscription Plan",
      options: [["Free", "free"], ["Pro", "pro"], ["Enterprise", "enterprise"]],
      selected: "pro",
      disabled: true
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Multiple Selection</h3>
    <%= render Base::SelectComponent.new(
      name: "example7[]",
      label: "Interests",
      options: [
        ["Technology", "tech"],
        ["Design", "design"],
        ["Marketing", "marketing"],
        ["Sales", "sales"],
        ["Support", "support"]
      ],
      selected: ["tech", "design"],
      multiple: true,
      hint: "Hold Cmd/Ctrl to select multiple"
    ) %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <h3 class="text-lg font-semibold text-white mb-4">Small List</h3>
      <%= render Base::SelectComponent.new(
        name: "size1",
        label: "Priority",
        options: [["Low", "low"], ["Medium", "medium"], ["High", "high"]]
      ) %>
    </div>

    <div>
      <h3 class="text-lg font-semibold text-white mb-4">Long List</h3>
      <%= render Base::SelectComponent.new(
        name: "size2",
        label: "US State",
        prompt: "Select a state...",
        options: [
          ["Alabama", "AL"], ["Alaska", "AK"], ["Arizona", "AZ"], 
          ["Arkansas", "AR"], ["California", "CA"], ["Colorado", "CO"],
          ["Connecticut", "CT"], ["Delaware", "DE"], ["Florida", "FL"],
          ["Georgia", "GA"], ["Hawaii", "HI"], ["Idaho", "ID"]
        ]
      ) %>
    </div>
  </div>
</div>
