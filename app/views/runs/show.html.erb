<div class="container mx-auto px-4 py-8">
  <!-- Header -->
      <div class="mb-8">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h1 class="text-3xl font-bold text-white mb-2">
              üå≥ <%= @run.name || "Run ##{@run.id}" %>
            </h1>
            <% if @run.persona %>
              <div class="flex items-center gap-2 text-gray-400 text-sm mb-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
                </svg>
                <%= link_to @run.persona.name, persona_path(@run.persona), class: "hover:text-indigo-400" %>
              </div>
            <% end %>
            <div class="flex gap-2">
              <%= render ::Base::ButtonComponent.new(variant: :ghost, size: :sm, href: runs_path) do %>
                ‚Üê Back to runs
              <% end %>
              <%= render ::Base::ButtonComponent.new(variant: :ghost, size: :sm, href: run_vote_path(@run)) do %>
                Vote
              <% end %>
              <%= render ::Base::ButtonComponent.new(variant: :ghost, size: :sm, href: run_gallery_path(@run)) do %>
                Gallery
              <% end %>
              <%= render ::Base::ButtonComponent.new(variant: :ghost, size: :sm, href: winners_run_path(@run)) do %>
                Winners
              <% end %>
            </div>
          </div>
          <div class="text-right">
            <div class="text-4xl font-bold <%= @completion_percentage == 100 ? 'text-green-400' : 'text-yellow-400' %>">
              <%= @completion_percentage %>%
            </div>
            <div class="text-sm text-gray-400">Complete</div>
          </div>
        </div>

        <!-- Stats Summary -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <%= render ::Base::CardComponent.new(variant: :default) do |c| %>
            <% c.with_body(class: "text-center") do %>
              <div class="text-2xl font-bold text-green-400"><%= @total_candidates %></div>
              <div class="text-xs text-gray-400">Active Candidates</div>
            <% end %>
          <% end %>
          <%= render ::Base::CardComponent.new(variant: :default) do |c| %>
            <% c.with_body(class: "text-center") do %>
              <div class="text-2xl font-bold text-red-400"><%= @total_rejected %></div>
              <div class="text-xs text-gray-400">Rejected</div>
            <% end %>
          <% end %>
          <%= render ::Base::CardComponent.new(variant: :default) do |c| %>
            <% c.with_body(class: "text-center") do %>
              <div class="text-2xl font-bold text-purple-400"><%= @total_votes %></div>
              <div class="text-xs text-gray-400">Votes Cast</div>
            <% end %>
          <% end %>
          <%= render ::Base::CardComponent.new(variant: :default) do |c| %>
            <% c.with_body(class: "text-center") do %>
              <div class="text-2xl font-bold text-blue-400"><%= @steps.size %></div>
              <div class="text-xs text-gray-400">Pipeline Steps</div>
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Step Progress -->
      <%= render ::Base::CardComponent.new(variant: :default, class: "mb-8") do |c| %>
        <% c.with_body do %>
        <h2 class="text-xl font-bold text-white mb-4">Pipeline Progress</h2>
        <div class="flex gap-2">
          <% @step_stats.each do |stat| %>
            <% percentage = stat[:target] > 0 ? (stat[:active_count].to_f / stat[:target] * 100) : 0 %>
            <% width = [percentage, 100].min %>
            <div class="flex-1">
              <div class="text-xs text-gray-400 mb-1"><%= stat[:step].name %></div>
              <div class="h-3 bg-gray-700 rounded-full overflow-hidden">
                <div class="h-full <%= stat[:complete] ? 'bg-green-500' : 'bg-yellow-500' %>" 
                     style="width: <%= width %>%"></div>
              </div>
              <div class="text-xs text-gray-500 mt-1"><%= stat[:active_count] %>/<%= stat[:target] %></div>
            </div>
          <% end %>
        </div>
        <% end %>
      <% end %>

      <!-- Tree Visualization -->
      <%= render ::Base::CardComponent.new(variant: :default) do |c| %>
        <% c.with_body do %>
        <h2 class="text-xl font-bold text-white mb-4">Candidate Tree</h2>
        
        <% if @root_candidates.any? %>
          <div class="space-y-4">
            <% @root_candidates.each do |root| %>
              <%= render partial: 'tree_node', locals: { 
                candidate: root, 
                depth: 0, 
                pipeline: @pipeline,
                run: @run,
                max_depth: @steps.size - 1
              } %>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-400 text-center py-8">No candidates in this run yet</p>
        <% end %>
        <% end %>
      <% end %>
</div>
