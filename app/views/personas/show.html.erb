<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <%= link_to "â† Back to Personas", personas_path, class: "text-indigo-400 hover:text-indigo-300" %>
  </div>

  <div class="bg-gray-800 rounded-lg p-8 border border-gray-700">
    <div class="flex justify-between items-start mb-6">
      <h1 class="text-3xl font-bold text-white"><%= @persona.name %></h1>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_persona_path(@persona),
            class: "px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-lg transition-colors" %>
        <%= button_to "Delete", persona_path(@persona), method: :delete,
            data: { turbo_confirm: "Are you sure you want to delete this persona?" },
            class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors" %>
      </div>
    </div>

    <div class="space-y-4">
      <div>
        <h3 class="text-sm font-medium text-gray-400 mb-1">Created</h3>
        <p class="text-white"><%= @persona.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>

      <div>
        <h3 class="text-sm font-medium text-gray-400 mb-1">Last Updated</h3>
        <p class="text-white"><%= @persona.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      </div>
    </div>
  </div>
</div>
