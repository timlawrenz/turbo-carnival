<div class="p-8 space-y-6 bg-gray-100 dark:bg-gray-800">
  <div class="space-y-4">
    <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-4">Pipeline Run Statuses</h3>
    
    <div class="flex gap-2 items-center">
      <span class="text-gray-700 dark:text-gray-300 text-sm w-24">Active:</span>
      <%= render ::Base::BadgeComponent.new(variant: :success) do %>
        Active
      <% end %>
    </div>

    <div class="flex gap-2 items-center">
      <span class="text-gray-700 dark:text-gray-300 text-sm w-24">Completed:</span>
      <%= render ::Base::BadgeComponent.new(variant: :default) do %>
        Completed
      <% end %>
    </div>

    <div class="flex gap-2 items-center">
      <span class="text-gray-700 dark:text-gray-300 text-sm w-24">In Progress:</span>
      <%= render ::Base::BadgeComponent.new(variant: :primary) do %>
        In Progress
      <% end %>
    </div>

    <div class="flex gap-2 items-center">
      <span class="text-gray-700 dark:text-gray-300 text-sm w-24">Failed:</span>
      <%= render ::Base::BadgeComponent.new(variant: :danger) do %>
        Failed
      <% end %>
    </div>
  </div>

  <div class="space-y-4 mt-8">
    <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-4">Content Pillar Tags</h3>
    
    <div class="flex gap-2 flex-wrap">
      <%= render ::Base::BadgeComponent.new(variant: :outline) do %>
        Thanksgiving 2024
      <% end %>
      <%= render ::Base::BadgeComponent.new(variant: :outline) do %>
        Holiday Season
      <% end %>
      <%= render ::Base::BadgeComponent.new(variant: :outline) do %>
        Winter Fashion
      <% end %>
    </div>
  </div>

  <div class="space-y-4 mt-8">
    <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-4">Gap Indicators</h3>
    
    <div class="flex gap-4 items-center">
      <span class="text-gray-700 dark:text-gray-300 text-sm">Needs content:</span>
      <%= render ::Base::BadgeComponent.new(variant: :warning, size: :sm) do %>
        GAP: -2
      <% end %>
    </div>

    <div class="flex gap-4 items-center">
      <span class="text-gray-700 dark:text-gray-300 text-sm">On track:</span>
      <%= render ::Base::BadgeComponent.new(variant: :success, size: :sm) do %>
        âœ“ OK
      <% end %>
    </div>
  </div>

  <div class="space-y-4 mt-8">
    <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-4">Counts</h3>
    
    <div class="flex gap-2 items-center">
      <span class="text-gray-700 dark:text-gray-300 text-sm">Notifications:</span>
      <%= render ::Base::BadgeComponent.new(variant: :danger, size: :sm) do %>
        5
      <% end %>
    </div>

    <div class="flex gap-2 items-center">
      <span class="text-gray-700 dark:text-gray-300 text-sm">Active Runs:</span>
      <%= render ::Base::BadgeComponent.new(variant: :primary, size: :sm) do %>
        12
      <% end %>
    </div>
  </div>
</div>
