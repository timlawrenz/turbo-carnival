<div class="p-4 bg-purple-900/20 border border-purple-700 rounded-lg mb-4">
  <div class="flex items-start gap-3">
    <div class="text-2xl">âœ¨</div>
    <div class="flex-1">
      <h3 class="font-semibold mb-2 text-purple-400">AI Generated Caption</h3>
      <p class="text-zinc-300 whitespace-pre-wrap mb-3"><%= caption %></p>
      
      <% if metadata.present? %>
        <div class="text-xs text-zinc-500 space-y-1">
          <% if metadata[:generation_time] %>
            <div>Generated in <%= metadata[:generation_time] %>s</div>
          <% end %>
          <% if metadata[:word_count] %>
            <div><%= metadata[:word_count] %> words, <%= caption.length %> characters</div>
          <% end %>
        </div>
      <% end %>
      
      <div class="flex gap-2 mt-3">
        <button type="button" 
                onclick="document.getElementById('post_caption').value = this.dataset.caption; document.getElementById('post_caption').dispatchEvent(new Event('input'));"
                data-caption="<%= caption.gsub('"', '&quot;') %>"
                class="px-3 py-1 bg-purple-600 hover:bg-purple-700 rounded text-sm transition-colors">
          Use This Caption
        </button>
        <%= button_to "Regenerate", 
                     suggest_caption_scheduling_post_path(metadata[:photo_id] || params[:id]),
                     method: :post,
                     class: "px-3 py-1 bg-zinc-700 hover:bg-zinc-600 rounded text-sm transition-colors",
                     form: { data: { turbo_frame: "caption_suggestion" } } %>
      </div>
    </div>
  </div>
</div>
