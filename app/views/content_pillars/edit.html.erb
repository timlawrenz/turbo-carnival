<div class="container mx-auto px-4 py-8">
  <div class="mb-4">
    <%= link_to "â† Back to #{@pillar.name}", persona_pillar_path(@persona, @pillar), class: "text-blue-400 hover:text-blue-300" %>
  </div>

  <h1 class="text-3xl font-bold mb-8">Edit Content Pillar</h1>

  <%= render 'form', 
             url: persona_pillar_path(@persona, @pillar), 
             method: :patch,
             button_text: "Update Content Pillar" %>

  <% if @pillar.photos.empty? %>
    <%= render CardComponent.new(classes: "mt-6") do |c| %>
      <% c.with_body do %>
        <h3 class="font-semibold text-red-400 mb-2">Danger Zone</h3>
        <%= button_to "Delete This Pillar", 
                     persona_pillar_path(@persona, @pillar), 
                     method: :delete,
                     data: { confirm: "Are you sure you want to delete '#{@pillar.name}'? This action cannot be undone." },
                     class: "bg-red-600 hover:bg-red-700 text-white font-medium px-4 py-2 rounded" %>
      <% end %>
    <% end %>
  <% end %>
</div>
