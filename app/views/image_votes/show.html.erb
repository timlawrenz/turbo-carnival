<div class="min-h-screen bg-gray-900 flex flex-col">
  <!-- Header with run context -->
  <div class="bg-gray-800 border-b border-gray-700 px-6 py-3 flex-shrink-0">
    <div class="container mx-auto flex justify-between items-center">
      <div>
        <h1 class="text-xl font-bold text-white">
          üó≥Ô∏è Voting: <%= @run.name || "Run ##{@run.id}" %>
        </h1>
        <div class="text-sm text-gray-400 mt-1">
          <%= link_to "‚Üê Back to runs", runs_path, class: "hover:text-white" %>
          <span class="mx-2">|</span>
          <%= link_to "Gallery", run_gallery_path(@run), class: "hover:text-white" %>
        </div>
      </div>
      <div class="text-right text-sm text-gray-400">
        Pipeline: <%= @run.pipeline.name %>
      </div>
    </div>
  </div>

  <div class="flex-1 flex items-stretch p-4 min-h-0">
    <div id="voting-interface" class="w-full flex flex-col min-h-0">
      <% if @pair %>
        <%= render ComparisonViewComponent.new(candidate_a: @candidate_a, candidate_b: @candidate_b, run: @run) %>
      <% else %>
        <%= render "complete" %>
      <% end %>
    </div>
  </div>
</div>
