<div class="flex flex-wrap gap-3">
  <% %i[sm md lg xl full].each do |size| %>
    <button type="button" class="rounded-lg bg-blue-600 px-4 py-2 text-white hover:bg-blue-700" onclick="document.getElementById('modal-<%= size %>').classList.remove('hidden')">
      <%= size.to_s.upcase %>
    </button>

    <%= render Base::ModalComponent.new(id: "modal-#{size}", title: "#{size.to_s.upcase} Modal", size: size) do %>
      <p class="text-zinc-600">
        This is a <strong><%= size %></strong> sized modal.
      </p>
      <p class="mt-2 text-sm text-zinc-500">
        Available sizes: sm, md (default), lg, xl, full
      </p>
    <% end %>
  <% end %>
</div>
