<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-2"><%= @persona.name.titleize %></h1>
  <p class="text-gray-600 mb-8">Persona Dashboard</p>
  
  <!-- Stats -->
  <div class="grid grid-cols-3 gap-4 mb-8">
    <div class="border rounded-lg p-4">
      <div class="text-2xl font-bold"><%= @pillars.count %></div>
      <div class="text-gray-600">Pillars</div>
    </div>
    <div class="border rounded-lg p-4">
      <div class="text-2xl font-bold"><%= @total_clusters %></div>
      <div class="text-gray-600">Clusters</div>
    </div>
    <div class="border rounded-lg p-4">
      <div class="text-2xl font-bold"><%= @total_photos %></div>
      <div class="text-gray-600">Photos</div>
    </div>
  </div>

  <!-- Pillars List -->
  <h2 class="text-2xl font-semibold mb-4">Content Pillars</h2>
  <div class="space-y-3">
    <% @pillars.each do |pillar| %>
      <div class="border rounded-lg p-4 hover:bg-gray-50 transition">
        <%= link_to persona_pillar_path(@persona, pillar), class: "flex justify-between items-center" do %>
          <div>
            <h3 class="font-semibold text-lg"><%= pillar.name %></h3>
            <% if pillar.description.present? %>
              <p class="text-gray-600 text-sm"><%= pillar.description %></p>
            <% end %>
          </div>
          <div class="text-gray-500">
            <%= pluralize(pillar.clusters.count, 'cluster') %> →
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Recent Clusters -->
  <% if @clusters.any? %>
    <h2 class="text-2xl font-semibold mt-8 mb-4">Recent Clusters</h2>
    <div class="space-y-3">
      <% @clusters.each do |cluster| %>
        <div class="border rounded-lg p-4 hover:bg-gray-50 transition">
          <% pillar = cluster.pillars.first %>
          <%= link_to (pillar ? persona_pillar_cluster_path(@persona, pillar, cluster) : persona_clusters_path(@persona)), class: "block" do %>
            <h3 class="font-semibold"><%= cluster.name %></h3>
            <div class="text-sm text-gray-600 mt-1">
              <% if pillar %>
                <span class="inline-block bg-gray-200 rounded px-2 py-1"><%= pillar.name %></span>
              <% end %>
              <span class="ml-2"><%= pluralize(cluster.photos.count, 'photo') %></span>
              <span class="ml-2">·</span>
              <span class="ml-2"><%= cluster.created_at.strftime('%b %d, %Y') %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
