<div class="space-y-8 p-6 bg-gray-900">
  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Unchecked</h3>
    <%= render Base::CheckboxComponent.new(
      name: "example1",
      label: "Enable email notifications"
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Checked</h3>
    <%= render Base::CheckboxComponent.new(
      name: "example2",
      label: "Feature enabled",
      checked: true
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">With Hint</h3>
    <%= render Base::CheckboxComponent.new(
      name: "example3",
      label: "Make this persona public",
      hint: "Public personas can be discovered by other users in the community"
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Checked with Hint</h3>
    <%= render Base::CheckboxComponent.new(
      name: "example4",
      label: "Subscribe to newsletter",
      hint: "Get weekly updates about new features and tips",
      checked: true
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Disabled (Unchecked)</h3>
    <%= render Base::CheckboxComponent.new(
      name: "example5",
      label: "Premium feature (upgrade required)",
      disabled: true
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Disabled (Checked)</h3>
    <%= render Base::CheckboxComponent.new(
      name: "example6",
      label: "Required security setting",
      checked: true,
      disabled: true,
      hint: "This setting cannot be changed for security reasons"
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Long Label</h3>
    <%= render Base::CheckboxComponent.new(
      name: "example7",
      label: "I agree to the Terms of Service and Privacy Policy, and I understand that my data will be processed according to these documents and applicable laws",
      hint: "You must accept the terms to continue using the service"
    ) %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Checkbox Group</h3>
    <div class="space-y-3">
      <%= render Base::CheckboxComponent.new(
        name: "notifications[email]",
        label: "Email notifications",
        checked: true
      ) %>
      <%= render Base::CheckboxComponent.new(
        name: "notifications[sms]",
        label: "SMS notifications",
        checked: false
      ) %>
      <%= render Base::CheckboxComponent.new(
        name: "notifications[push]",
        label: "Push notifications",
        checked: true
      ) %>
      <%= render Base::CheckboxComponent.new(
        name: "notifications[weekly_digest]",
        label: "Weekly digest email",
        hint: "Receive a summary of your activity every Monday",
        checked: false
      ) %>
    </div>
  </div>
</div>
