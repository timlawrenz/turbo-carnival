<div class="flex flex-col items-center justify-center gap-20 py-20">
  <!-- Top -->
  <div>
    <%= render Base::TooltipComponent.new(text: "Tooltip on top", position: :top) do %>
      <button class="rounded-lg bg-zinc-600 px-4 py-2 text-white">Top</button>
    <% end %>
  </div>

  <!-- Horizontal row -->
  <div class="flex gap-20">
    <%= render Base::TooltipComponent.new(text: "Tooltip on left", position: :left) do %>
      <button class="rounded-lg bg-zinc-600 px-4 py-2 text-white">Left</button>
    <% end %>

    <%= render Base::TooltipComponent.new(text: "Tooltip on right", position: :right) do %>
      <button class="rounded-lg bg-zinc-600 px-4 py-2 text-white">Right</button>
    <% end %>
  </div>

  <!-- Bottom -->
  <div>
    <%= render Base::TooltipComponent.new(text: "Tooltip on bottom", position: :bottom) do %>
      <button class="rounded-lg bg-zinc-600 px-4 py-2 text-white">Bottom</button>
    <% end %>
  </div>
</div>
