<div class="<%= card_classes %>">
  <% if header? %>
    <div class="<%= header_classes %>">
      <%= header %>
    </div>
  <% end %>

  <% if body? %>
    <div class="<%= body_classes %>">
      <%= body %>
    </div>
  <% end %>

  <% if footer? %>
    <div class="<%= footer_classes %>">
      <%= footer %>
    </div>
  <% end %>
</div>
