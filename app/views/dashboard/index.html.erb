<div class="space-y-8">
  <!-- Page header -->
  <div>
    <h1 class="text-2xl/8 font-semibold text-zinc-950 dark:text-white">Dashboard</h1>
    <p class="mt-2 text-sm/6 text-zinc-500 dark:text-zinc-400">
      Overview of your content pipeline and personas
    </p>
  </div>

  <!-- Stats grid -->
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
    <%= render Catalyst::CardComponent.new do %>
      <div class="p-6">
        <dt class="text-sm/6 font-medium text-zinc-500 dark:text-zinc-400">Personas</dt>
        <dd class="mt-2 text-3xl/8 font-semibold text-zinc-950 dark:text-white"><%= @stats[:total_personas] %></dd>
      </div>
    <% end %>

    <%= render Catalyst::CardComponent.new do %>
      <div class="p-6">
        <dt class="text-sm/6 font-medium text-zinc-500 dark:text-zinc-400">Content Pillars</dt>
        <dd class="mt-2 text-3xl/8 font-semibold text-zinc-950 dark:text-white"><%= @stats[:total_pillars] %></dd>
      </div>
    <% end %>

    <%= render Catalyst::CardComponent.new do %>
      <div class="p-6">
        <dt class="text-sm/6 font-medium text-zinc-500 dark:text-zinc-400">Clusters</dt>
        <dd class="mt-2 text-3xl/8 font-semibold text-zinc-950 dark:text-white"><%= @stats[:total_clusters] %></dd>
      </div>
    <% end %>

    <%= render Catalyst::CardComponent.new do %>
      <div class="p-6">
        <dt class="text-sm/6 font-medium text-zinc-500 dark:text-zinc-400">Total Runs</dt>
        <dd class="mt-2 text-3xl/8 font-semibold text-zinc-950 dark:text-white"><%= @stats[:total_runs] %></dd>
      </div>
    <% end %>
  </div>

  <!-- Personas grid -->
  <div>
    <%= render Catalyst::CardComponent.new do |card| %>
      <% card.with_header do %>
        <div class="flex items-center justify-between">
          <h2 class="text-lg/7 font-semibold text-zinc-950 dark:text-white">Personas</h2>
          <%= link_to "Create Persona", new_persona_path, class: "px-3 py-1.5 text-sm/6 font-semibold rounded-lg bg-blue-600 hover:bg-blue-700 text-white transition-colors" %>
        </div>
      <% end %>

      <% if @personas.any? %>
        <div class="divide-y divide-zinc-950/5 dark:divide-white/5">
          <% @personas.each do |persona| %>
            <div class="p-6 hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <%= link_to persona_path(persona) do %>
                    <h3 class="text-base/6 font-semibold text-zinc-950 dark:text-white hover:text-blue-600 dark:hover:text-blue-400"><%= persona.name %></h3>
                  <% end %>
                  <% if persona.caption_config.present? && persona.caption_config.tone.present? %>
                    <p class="mt-1 text-sm/6 text-zinc-500 dark:text-zinc-400 line-clamp-2">
                      <%= persona.caption_config.tone %> tone
                    </p>
                  <% end %>
                </div>
                <div class="ml-4 flex items-center gap-3">
                  <div class="text-right">
                    <div class="text-sm/6 font-medium text-zinc-950 dark:text-white">
                      <%= persona.content_pillars.count %> pillars
                    </div>
                    <div class="text-xs/5 text-zinc-500 dark:text-zinc-400">
                      <%= time_ago_in_words(persona.updated_at) %> ago
                    </div>
                  </div>
                  <%= link_to persona_scheduling_posts_path(persona), 
                             class: "px-3 py-1.5 text-sm font-semibold rounded-lg bg-blue-600 hover:bg-blue-700 text-white transition-colors whitespace-nowrap" do %>
                    üìù Create Post
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <p class="text-sm/6 text-zinc-500 dark:text-zinc-400">No personas yet</p>
          <%= link_to "Create your first persona", new_persona_path, class: "mt-4 inline-flex px-3.5 py-2.5 text-base/6 font-semibold rounded-lg bg-blue-600 hover:bg-blue-700 text-white transition-colors" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
