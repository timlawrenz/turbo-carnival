<div class="space-y-4 p-6 bg-gray-900">
  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Success</h3>
    <%= render Base::AlertComponent.new(variant: :success) do %>
      Your changes have been saved successfully!
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Info</h3>
    <%= render Base::AlertComponent.new(variant: :info) do %>
      This feature is currently in beta. Please report any issues you encounter.
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Warning</h3>
    <%= render Base::AlertComponent.new(variant: :warning) do %>
      Your session will expire in 5 minutes. Please save your work to avoid losing changes.
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Danger</h3>
    <%= render Base::AlertComponent.new(variant: :danger) do %>
      There was a problem processing your request. Please try again or contact support.
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">With Title</h3>
    <%= render Base::AlertComponent.new(variant: :warning, title: "Payment Required") do %>
      Your trial period has ended. Please update your payment information to continue using the service.
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Dismissible</h3>
    <%= render Base::AlertComponent.new(variant: :info, dismissible: true, title: "New Features Available") do %>
      We've added several new features to improve your experience. Click the help icon to learn more.
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-semibold text-white mb-4">Long Content</h3>
    <%= render Base::AlertComponent.new(variant: :success, title: "Account Created", dismissible: true) do %>
      Your account has been created successfully! We've sent a verification email to your registered email address. 
      Please check your inbox and click the verification link to activate your account. 
      If you don't see the email, please check your spam folder.
    <% end %>
  </div>
</div>
