<nav class="<%= container_classes %>" data-controller="<%= 'mobile-menu' if @mobile_menu %>">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <div class="flex items-center gap-8">
        <% if logo? %>
          <div class="flex-shrink-0">
            <%= logo %>
          </div>
        <% end %>
        
        <% if items? %>
          <div class="hidden md:flex gap-1">
            <% items.each do |item| %>
              <%= item %>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <div class="flex items-center gap-4">
        <% if actions? %>
          <div class="hidden sm:flex items-center gap-4">
            <%= actions %>
          </div>
        <% end %>
        
        <% if @mobile_menu && items? %>
          <button type="button" class="md:hidden p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-800" data-action="click->mobile-menu#toggle" aria-label="Toggle menu">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        <% end %>
      </div>
    </div>
    
    <% if @mobile_menu && items? %>
      <div class="md:hidden border-t border-gray-800" data-mobile-menu-target="menu" style="display: none;">
        <div class="flex flex-col">
          <% items.each do |item| %>
            <%= item %>
          <% end %>
        </div>
        <% if actions? %>
          <div class="border-t border-gray-800 p-4 flex flex-col gap-2">
            <%= actions %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</nav>
